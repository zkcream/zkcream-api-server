{
  "name": "@cream/api-server",
  "version": "0.2.3",
  "description": "",
  "main": "build/ts/index.js",
  "scripts": {
    "build": "tsc",
    "prebuild": "yarn copy:maci-circuits",
    "copy:config": "cp ./ts/config/**.yaml ./build/ts/config/",
    "copy:maci-circuits": "cp -R ./zkcream/node_modules/maci-circuits ./node_modules",
    "docker": "docker-compose -f docker/docker-compose.yml up",
    "format": "npx prettier './ts/**/*.{js,ts}' --write",
    "postbuild": "yarn copy:config",
    "postinstall": "husky install",
    "start": "node ./build/ts/index.js",
    "start:db": "cd docker && docker-compose up -d db",
    "test": "npx jest --runInBand",
    "test:server": "npx jest Server.test.ts",
    "test:api": "npx jest API.test.ts",
    "watch": "tsc --watch"
  },
  "author": "Kazuaki Ishiguro <kazuakiishiguro@protonmail.com>",
