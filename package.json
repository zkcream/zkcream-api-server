    "@types/koa-logger": "^3.1.2",
    "@types/koa-router": "^7.4.1",
    "@types/koa__cors": "^3.0.3",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "app-root-path": "^3.0.0",
    "config": "^3.3.6",
